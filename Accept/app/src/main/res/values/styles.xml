<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#96B4FF</item>
    </style>



    <style name="switch11" parent="android:Theme.DeviceDefault.NoActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/col13</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/col1</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/col15</item>
    </style>
</resources>
